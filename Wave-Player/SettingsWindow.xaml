<Window x:Class="Wave_Player.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="500" Width="400"
        Background="#1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="28"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#080808" MouseDown="TitleBar_MouseDown">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="8,0,0,0">
                <TextBlock Text="Settings" Foreground="White" FontSize="16" FontWeight="SemiBold" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Style="{StaticResource ModernButton}"
                    Content="×"
                    Width="46"
                    Height="28"
                    FontSize="16"
                    Padding="0"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    Click="Close_Click"/>
        </Grid>

        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Settings" 
                       Foreground="White" 
                       FontSize="24" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,0,0,20">
                   
                    <Border Background="#181818" 
                            Padding="20"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="#333333"
                            Margin="0,0,0,16">
                    
                        <StackPanel>
                            <TextBlock Text="Custom Theme Colors" 
                            FontSize="18"       
                            Foreground="White"
                            FontWeight="Bold"
                            Margin="0,0,0,12"/>

                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="Primary Color" 
                                Foreground="#B3B3B3" 
                                Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="PrimaryColorTextBox"
                                        Style="{StaticResource ModernTextBox}"
                                        Text="{Binding PrimaryColor, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Grid.Column="1" 
                                    x:Name="PrimaryColorPicker"
                                    Width="32"
                                    Height="32"
                                    Margin="8,0,0,0"
                                    
                                    Click="ColorPicker_Click"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Secondary Color" 
                                    Foreground="#B3B3B3" 
                                    Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="SecondaryColorTextBox"
                                        Style="{StaticResource ModernTextBox}"
                                        Text="{Binding SecondaryColor, UpdateSourceTrigger=PropertyChanged}"/>
                                    <Button Grid.Column="1" 
                                        x:Name="SecondaryColorPicker"
                                        Width="32"
                                        Height="32"
                                        Margin="8,0,0,0"
                                        Click="ColorPicker_Click"/>
                                </Grid>
                            </StackPanel>
                            
                        </StackPanel>
                    </Border>

                    <Border Background="#181818" 
                            Padding="20"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="#333333"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Audio" 
                                     Foreground="White" 
                                     FontSize="18" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,16"/>

                            <StackPanel Margin="0,0,0,20">
                                <TextBlock Text="Default Volume" 
                                         Foreground="#B3B3B3" 
                                         Margin="0,0,0,8"/>
                                <Slider x:Name="DefaultVolumeSlider"
                                       Style="{StaticResource ModernSlider}"
                                       Maximum="1" 
                                       Value="0.5"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Crossfade Duration (seconds)" 
                                         Foreground="#B3B3B3" 
                                         Margin="0,0,0,8"/>
                                <Slider x:Name="CrossfadeSlider"
                                       Style="{StaticResource ModernSlider}"
                                       Maximum="10" 
                                       Value="2"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <Border Background="#181818" 
                            Padding="20"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="#333333"
                            Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Playback" 
                                     Foreground="White" 
                                     FontSize="18" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,16"/>
                            <CheckBox x:Name="AutoPlayCheckBox"
                                    Content="Auto-play when track added" 
                                    Style="{StaticResource ModernCheckBox}"
                                    Margin="0,0,0,12"/>

                            <CheckBox x:Name="RememberTrackCheckBox"
                                    Content="Remember last played track" 
                                    Style="{StaticResource ModernCheckBox}"
                                    Margin="0,0,0,12"/>

                            <CheckBox x:Name="AutoShuffleCheckBox"
                                    Content="Auto shuffle after starting"
                                    Style="{StaticResource ModernCheckBox}"
                                    Margin="0,0,0,12"/>

                            <CheckBox x:Name="NotificationsCheckBox"
                                    Content="Show notifications" 
                                    Style="{StaticResource ModernCheckBox}"/>
                        </StackPanel>
                    </Border>

                    <Border Background="#181818" 
                            Padding="20"
                            CornerRadius="12"
                            BorderThickness="1"
                            BorderBrush="#333333">
                        <StackPanel>
                            <TextBlock Text="File Handling" 
                                     Foreground="White" 
                                     FontSize="18" 
                                     FontWeight="Bold"
                                     Margin="0,0,0,16"/>

                            <StackPanel>
                                <TextBlock Text="Default Music Folder" 
                                         Foreground="#B3B3B3" 
                                         Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="MusicFolderTextBox"
                                            Style="{StaticResource ModernTextBox}"
                                            Height="32"
                                            VerticalContentAlignment="Center"/>
                                    <Button Grid.Column="1" 
                                            Content="📁" 
                                            Margin="8,0,0,0"
                                            Style="{StaticResource ModernButton}"
                                            Click="BrowseButton_Click"/>
                                </Grid>
                            </StackPanel>
    
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="CancelButton" 
                Content="Cancel" 
                Margin="0,0,16,0"
                Style="{StaticResource OutlinedButton}"
                Click="CancelButton_Click"/>

                <Button x:Name="ApplyButton" 
                Content="Apply"
                Style="{StaticResource ModernButton}"
                Click="ApplyButton_Click">
                    <Button.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{DynamicResource PrimaryColor}" Offset="0"/>
                            <GradientStop Color="{DynamicResource SecondaryColor}" Offset="1"/>
                        </LinearGradientBrush>
                    </Button.Background>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>